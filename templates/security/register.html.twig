{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <div class="container mt-2">
        <div class="row">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">{{ 'app.ui.home'|trans }}</a></li>
                    <li class="breadcrumb-item active">{{ 'app.ui.register'|trans }}</li>
                </ol>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="container mt-2">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">{{ 'app.ui.register'|trans }}</div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.username, ('app.ui.username'|trans)) }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.username'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, ('app.ui.email'|trans)) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.email'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, ('app.ui.password'|trans)) }}
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.password'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.confirm_password, ('app.ui.confirm_password'|trans)) }}
                        {{ form_errors(form.confirm_password) }}
                        {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.confirm_password'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">{{ 'app.ui.register'|trans }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
