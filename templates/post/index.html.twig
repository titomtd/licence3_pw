{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <div class="container">
        {% for post in posts %}
            <div class="card mt-2">
                <div class="card-header">{{ ('app.ui.'~post.language)|trans }}</div>
                <div class="card-body">
                    <h5 class="card-title">{{ post.user.username }}</h5>
                    <p class="card-text">{{ post.content }}</p>
                    <a href="" class="btn btn-primary">{{ 'app.ui.read_more'|trans }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
