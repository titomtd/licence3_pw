{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<div class="container mt-2">
    <div class="row">
        <div class="col">
            <div class="card">
                {% if editMode %}
                <div class="card-header">{{ 'app.ui.add_edit_post'|trans }}</div>
                {% else %}
                <div class="card-header">{{ 'app.ui.add_new_post'|trans }}</div>
                {% endif %}
                <div class="card-body">
                    {{ form_start(form)}}
                    <div class="form-group">
                        {{ form_label(form.title, ('app.ui.title'|trans)) }}
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.title'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.language, ('app.ui.language'|trans)) }}
                        {{ form_errors(form.language) }}
                        {{ form_widget(form.language, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.language'|trans)}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.content, ('app.ui.content'|trans)) }}
                        {{ form_errors(form.content) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': ('app.ui.content'|trans)}}) }}
                    </div>
                    <hr>
                    {% if form.vars.value.hasFile %}
                    <div class="form-group">
                        <p>{{ 'app.ui.a_file_exist' | trans }}</p>
                        <a class="btn btn-secondary"href="{{ absolute_url(asset('uploads/files/')) ~ form.vars.value.filename }}" download>{{ 'app.ui.download' | trans}}</a>
                    </div>
                    {% endif %}
                    <div class="form-group">
                        {{ form_label(form.filename, ('app.ui.filename'|trans)) }}
                        {{ form_errors(form.filename) }}
                        {{ form_widget(form.filename, {'attr': {'class': 'form-control-file'}}) }}
                    </div>
                    {% if editMode %}
                        <button type="submit" class="btn btn-success">{{ 'app.ui.save'|trans }}</button>
                    {% else %}
                        <button type="submit" class="btn btn-success">{{ 'app.ui.publish'|trans }}</button>
                    {% endif %}
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}